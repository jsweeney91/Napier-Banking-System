<Window x:Class="NapierBankingSystem.PlaintextInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBankingSystem"
        mc:Ignorable="d"
        Title="PlaintextInput" Height="391.597" Width="300">
    <Grid>
        <TextBox x:Name="plainTexttextbox" HorizontalAlignment="Left" Height="164" Margin="10,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <Image x:Name="Logo_png" Margin="0,0,10,269" Source="Logo.png" Stretch="Fill"/>
        <Label x:Name="messagelabel" Content="Enter text" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Margin="207,300,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="submitButton_Click"/>
        <Button x:Name="importButton" Content="Import" HorizontalAlignment="Left" Margin="127,300,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="importButton_Click" />

    </Grid>
</Window>

        <Label x:Name="label" Content="Sender:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Message body:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <Label x:Name="senderLbl" Content="" HorizontalAlignment="Left" Margin="114,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="messageBodyTb" HorizontalAlignment="Left" Height="52" Margin="10,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
